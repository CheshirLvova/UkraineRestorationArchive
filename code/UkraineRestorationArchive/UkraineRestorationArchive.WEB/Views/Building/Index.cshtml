@{
    ViewData["Title"] = "Building";
}
@model IEnumerable<byte[]>
<h1>Index</h1>
@{int i = 0;} 
@foreach (var item in Model)
{   
    <img src="@Url.Action("GetImage", new { Id = i })" width="300" height="300"/>
    i++;
}
@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-5">
            <form method="post" enctype="multipart/form-data" asp-controller="Building" asp-action="AddImage">
                <div class="form-group">
                    <div class="col-md-10">
                        <p>Upload file</p>
                        <input class="form-control" name="files" type="file" accept="image/*" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input class="btn btn-success" type="submit" value="Upload" />
                    </div>
                </div>
            </form>
        </div>
    </div> 
}